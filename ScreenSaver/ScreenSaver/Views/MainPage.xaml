<Page
    x:Class="ScreenSaver.Views.MainPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:ScreenSaver.Properties"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF101010">
        <TextBlock x:Name="tbTime" HorizontalAlignment="Center" Text="00:00:00" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="150" Foreground="#FF767676"/>
        <TextBlock x:Name="tbDate" HorizontalAlignment="Center" Text="2020/01/01" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,90,0,0" FontSize="24" Foreground="#FF767676"/>
    </Grid>
</Page>
